
<!-- 회원가입 시작 -->
<section class="join_sec">
    <div class="join_wrap">
        <div class="join_logo">JOIN</div>
        <form action="/joinInfo" method="post" name="joinsubmit">
            <div class="join_info_wrap">
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">아이디</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="id" type="text" name="id">
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">비밀번호</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="pwd" type="text" name="pw">
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">비밀번호 재확인</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="pwd2" type="text" name="repw">
                    </div>
                </div>
            </div>
            <div class="join_info_wrap">
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">이름</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="name" type="text" name="name">
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">주민번호</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="num" type="text" name="num" placeholder="-빼고 입력">
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">성별</label>
                    </h1>
                    <div class="sex_box">
                        <select  name="sex">
                            <option value="">성별</option>
                            <option value="남자">남자</option>
                            <option value="여자">여자</option>
                            <option value="선택안함">선택안함</option>
                        </select>
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">이메일(선택)</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="mail" type="text" name="email">
                    </div>
                </div>
            </div>
            <button class="join_btn" type="button" onclick="Validation()">회원가입</button>  
        </form>
    </div>
</section>
<script src="js/join.js"></script>