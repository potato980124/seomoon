
<!-- 회원가입 시작 -->
<section class="join_sec">
    <div class="join_wrap">
        <div class="join_logo">JOIN</div>
        <form action="/joinInfo" method="post">
            <div class="join_info_wrap">
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">아이디</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="id" type="text" name="id">
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">비밀번호</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="pwd" type="text" name="pw">
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">비밀번호 재확인</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="pwd2" type="text" name="repw">
                    </div>
                </div>
            </div>
            <div class="join_info_wrap">
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">이름</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="name" type="text" name="name">
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">생년월일</label>
                    </h1>
                    <div class="bir_wrap">    
                        <div class="birthy_box">
                            <input type="text" placeholder="년도(4자)"name="year">
                        </div>
                        <div class="birthm_box">
                            <select name="month">
                                <option>월</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                            </select>
                            </div>
                        <div class="birthd_box">
                            <input type="text" placeholder="일" name="date">
                        </div>
                    </div> 
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">주민번호</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="num" type="text" name="num" placeholder="-빼고 입력">
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">성별</label>
                    </h1>
                    <div class="sex_box">
                        <select  name="sex">
                            <option value="">성별</option>
                            <option value="남자">남자</option>
                            <option value="여자">여자</option>
                            <option value="선택안함">선택안함</option>
                        </select>
                    </div>
                </div>
                <div class="join_info">
                    <h1 class="join_title">
                        <label for="">이메일(선택)</label>
                    </h1>
                    <div class="joinput_box">
                        <input id="mail" type="text" name="email">
                    </div>
                </div>
            </div>
            <button class="join_btn" type="submit">회원가입</button>  
        </form>
    </div>
</section>
<script src="js/join.js"></script>